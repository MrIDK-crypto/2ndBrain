# 2ndBrain Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# =============================================================================
# REQUIRED
# =============================================================================

# OpenAI API Key (Required for RAG, classification, and question generation)
OPENAI_API_KEY=your_openai_api_key_here

# Database URL (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/secondbrain

# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# OPTIONAL - Document Parsing
# =============================================================================

# LlamaParse API Key (for advanced document parsing)
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# =============================================================================
# OPTIONAL - Data Sources
# =============================================================================

# Enron Dataset Path (for demo data)
ENRON_MAILDIR=/path/to/maildir

# =============================================================================
# OPTIONAL - Neo4j Knowledge Graph
# =============================================================================

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# OPTIONAL - OAuth Integrations
# =============================================================================

# Gmail OAuth (for email connector)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Slack OAuth (for Slack connector)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_BOT_TOKEN=your_slack_bot_token

# GitHub OAuth (for GitHub connector)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# OPTIONAL - Production Settings
# =============================================================================

# Flask Debug Mode (set to 'true' only in development)
FLASK_DEBUG=false

# CORS Allowed Origins (comma-separated, no wildcards in production)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting Storage (use Redis in production)
# RATE_LIMIT_STORAGE_URI=redis://localhost:6379

# =============================================================================
# OPTIONAL - Content Generation
# =============================================================================

# Gamma API (for presentation generation)
GAMMA_API_KEY=your_gamma_api_key_here
